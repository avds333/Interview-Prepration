public class StudentSortByName implements Comparable<Student> 
{
	private String name ;
	//private int age ; 
	//private double fees ;
	public int compareTo(Student stu) 
	{
		// TOD+O Auto-generated method stub
		return name.compareTo(stu.getName());
	}
	
}
