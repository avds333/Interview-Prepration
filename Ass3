package com.aricent;
import java.util.ArrayList;
import java.util.List;
import java.util.Random;
public class RadiusCompute 
{
	List<Circle> al = new ArrayList<Circle>();
	Random r = new Random();
	Circle c ;
	long index = 0;
	public void computeRadius()
	{
	//	while()
		while(r.nextDouble()>0.01)
		{
			c = new Circle();
			al.add(c);
			System.out.println("Adding circle to list ="+al.get(0)+" ."+"  At index = "+index);
			index++ ; 
		}
	}
	public static void main(String...a)
	{
	RadiusCompute rc = new RadiusCompute();
	rc.computeRadius();
	}
}
